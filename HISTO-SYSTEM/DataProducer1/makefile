#
# This Makefile will compile all source found in the "DataProducer1 - The Histogram System" directory.
#
# ====================================================================================================================
# 							The Histogram System
# ====================================================================================================================
# Target Binary
# ====================================================================================================================

./bin/dp1 : ./obj/dp1.o
	cc ./obj/dp1.o -o ./bin/dp1 -lpthread

# ====================================================================================================================
# Object Dependencies
# ====================================================================================================================

./obj/dp1.o : ./src/dp1.c ./inc/dp1.h ../Common/shared_defs.h
	cc -c ./src/dp1.c -o ./obj/dp1.o -I./inc -I../Common

# ====================================================================================================================
# Other Targets
# ====================================================================================================================

all : ./bin/dp1

clean:
	rm -f ./bin/*
	rm -f ./obj/*.o
	rm -f ./inc/*.h~
	rm -f ./src/*.c~

