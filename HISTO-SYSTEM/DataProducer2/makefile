#
# This Makefile will compile all source found in the "DataProducer2 - The Histogram System" directory.
#
# ====================================================================================================================
# 							The Histogram System
# ====================================================================================================================
# Target Binary
# ====================================================================================================================

./bin/dp2 : ./obj/dp2.o
	cc ./obj/dp2.o -o ./bin/dp2 -lpthread

# ====================================================================================================================
# Object Dependencies
# ====================================================================================================================

./obj/dp2.o : ./src/dp2.c ./inc/dp2.h ../Common/shared_defs.h
	cc -c ./src/dp2.c -o ./obj/dp2.o -I./inc -I../Common

# ====================================================================================================================
# Other Targets
# ====================================================================================================================

all : ./bin/dp2

clean:
	rm -f ./bin/*
	rm -f ./obj/*.o
	rm -f ./inc/*.h~
	rm -f ./src/*.c~

