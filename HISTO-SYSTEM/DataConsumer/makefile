#
# This Makefile will compile all source found in the "DataConsumer - The Histogram System" directory.
#
# ====================================================================================================================
# 							The Histogram System
# ====================================================================================================================
# Target Binary
# ====================================================================================================================

./bin/dc : ./obj/dc.o
	cc ./obj/dc.o -o ./bin/dc -lpthread

# ====================================================================================================================
# Object Dependencies
# ====================================================================================================================

./obj/dc.o : ./src/dc.c ./inc/dc.h ../Common/shared_defs.h
	cc -c ./src/dc.c -o ./obj/dc.o -I./inc -I../Common

# ====================================================================================================================
# Other Targets
# ====================================================================================================================

all : ./bin/dc

clean:
	rm -f ./bin/*
	rm -f ./obj/*.o
	rm -f ./inc/*.h~
	rm -f ./src/*.c~
